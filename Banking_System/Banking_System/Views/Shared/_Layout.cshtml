<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    @*<link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@500&display=swap" rel="stylesheet">*@

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        .system-title {
            text-align: right;
            color: white;
            margin-top: 85px;
            margin-right: -45px;
        }

            .system-title h {
                font-size: 60px;
            }

        .divbtnnew {
            text-align: right;
            margin-top: 2%;
        }

        .btnnew {
            cursor: pointer;
            border: 1px solid #d2d2d2;
            background-color: transparent;
            height: 50px;
            width: 400px;
            color: white;
            font-size: 1.5em;
            box-shadow: 0 3px 3px rgba(181, 181, 181, 0.6);
        }
    </style>
</head>
<body style="
    background: url('/Content/images/22.jpg') ;
background-attachment:fixed;
background-size:cover;
-webkit-background-size: cover;
-moz-background-size: cover;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Banking System", "Index", "Banking", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Created By Ashwag Programmer</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>