@model IEnumerable<Banking_System.Models.Clients>

@{
    ViewBag.Title = "Display_Clints";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2, h4 {
        font-family: 'Cinzel-VariableFont_wght';
    }
</style>
<div style="position: relative;
  
    color: #fff;
    background-color: rgba(0,0,0,.5);">
    <h2>Display_Clints</h2>
    <br />
    @using (Html.BeginForm("Display_Clints", "Banking", FormMethod.Post))
    {
        <p>@Html.TextBox("ClientName")<input type="submit" value="Search Client" /></p>
    }
    <br />
    <p>
        @Html.ActionLink("Create New", "AddClient")&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;@Html.ActionLink("Back Home", "Index")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jop)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
              
            </tr>
        }

    </table>
    </div>