@model IEnumerable<Banking_System.Models.Accounts>

@{
    ViewBag.Title = "Display_Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2, h4 {
        font-family: 'Cinzel-VariableFont_wght';
    }
</style>
<div style="position: relative;
    color: #fff;
    background-color: rgba(0,0,0,.5);">
    <h2>Display_Accounts</h2>
    <br />
    @using (Html.BeginForm("Display_Accounts", "Banking", FormMethod.Post))
    {
        <p>@Html.TextBox("AccNum")<input type="submit" value="Search account" /></p>
    }
    <br />
    <p>
        @Html.ActionLink("Create New", "AddAcount")&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;@Html.ActionLink("Back Home", "Index")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Typ_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients.FullName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Typ_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clients.FullName)
                </td>
              
            </tr>
        }

    </table>
</div>